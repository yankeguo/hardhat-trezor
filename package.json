{
  "name": "@yankeguo/hardhat-trezor",
  "version": "0.0.1",
  "description": "Hardhat plugin for integration with a Trezor hardware wallet",
  "main": "dist/index.js",
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prettier": "prettier . --write",
    "protoc": "cd proto && protoc --plugin=../node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=../src/proto *.proto && npm run prettier",
    "build": "npm run prettier && rimraf dist tsconfig.tsbuildinfo && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yankeguo/hardhat-trezor.git"
  },
  "keywords": [
    "trezor",
    "hardhat",
    "cryptocurrency",
    "smart-contract"
  ],
  "author": "GUO YANKE",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yankeguo/hardhat-trezor/issues"
  },
  "homepage": "https://github.com/yankeguo/hardhat-trezor#readme",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "hardhat": "^2.22.5",
    "prettier": "3.3.2",
    "rimraf": "^5.0.7",
    "ts-proto": "^1.180.0",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "@nomicfoundation/ethereumjs-util": "^9.0.4"
  }
}
